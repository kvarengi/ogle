<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.OGLEDemiurge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cosmic_blue</item>
        <item name="colorPrimaryVariant">@color/cosmic_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/stellar_gold</item>
        <item name="colorSecondaryVariant">@color/stellar_dark_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cosmic_black</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/cosmic_black</item>
        
        <!-- Window features -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!-- Terminal theme -->
    <style name="TerminalTheme">
        <item name="android:background">@color/cosmic_black</item>
        <item name="android:textColor">@color/terminal_green</item>
        <item name="android:fontFamily">monospace</item>
    </style>
</resources>
